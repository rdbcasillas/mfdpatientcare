doctype
html(lang='en')
head
    meta(charset='utf-8')
    meta(http-equiv='X-UA-Compatible', content='IE=edge')
    meta(name='viewport', content='width=device-width, initial-scale=1')
    meta(name='description', content='')
    meta(name='author', content='')
    link(rel='icon', href='../../favicon.ico')
    title Cover Template for Bootstrap
    //
       Bootstrap core CSS 
    link(href='/css/bootstrap.min.css', rel='stylesheet')
    //
       Custom styles for this template 
    link(href='/css/cover.css', rel='stylesheet')
  body
    .site-wrapper
      .site-wrapper-inner
        .cover-container
          .masthead.clearfix
            .inner
              h3.masthead-brand Cover
              ul.nav.masthead-nav
                li.active
                  a(href='#') Home
                li
                  a(href='#') Features
                li
                  a(href='/login') SignIn 
        block content 
          .inner.cover
            h1.cover-heading Milwaukee Cares.
            p.lead
                |Milwaukee Cares is an app for Milwaukee's fire department and their                
                |patients for the purpose of logging patient info and providing them
                |quick and immediate help. 
            p.lead
              a.btn.btn-lg.btn-default(href='#') Sign Up 
     //
       Bootstrap core JavaScript
          ================================================== 
    //
       Placed at the end of the document so the pages load faster 
    script(src='https://ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js')
    script(src='../../dist/js/bootstrap.min.js')
    script(src='../../assets/js/docs.min.js')
    //
       IE10 viewport hack for Surface/desktop Windows 8 bug 
    script(src='../../assets/js/ie10-viewport-bug-workaround.js')

