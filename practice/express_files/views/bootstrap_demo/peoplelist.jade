extends ../layout
include personpanel

block content
  div(class='row')
    each val, index in ['success', 'warning', 'success', 'success', 'danger', 'success', 'success', 'success', 'danger', 'success', 'success', 'success', 'success', 'success', 'success', 'success', 'success', 'success', 'success']
      div(class='col-sm-6 col-md-4 col-lg-3')
          mixin personpanel(val)
          - var lg_rownum = index % 4 + 1
          - var md_rownum = index % 3 + 1
      case lg_rownum
        when 2
          div(class='clearfix visible-sm-block')
        when 4
          div(class='clearfix visible-lg-block visible-sm-block')
      case md_rownum
        when 3
          div(class='clearfix visible-md-block')
      div(class='clearfix visible-xs-block')

